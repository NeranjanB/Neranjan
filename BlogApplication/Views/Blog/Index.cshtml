        <p>
            Tagged under:
            @foreach (var tag in blog.Tags)
            {
                <span style="background-color:yellow;">
                    @*<a href="~/blog/tag/@tag">@tag</a>*@
                    
                        @tag
                    
                </span>
                <span>&nbsp;</span>
