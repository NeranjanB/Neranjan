@model List<BlogApplication.Models.BlogPostModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<li>@Html.ActionLink("Create Blog", "Create", "Blog")</li>

@if (ViewBag.Message != null)
{
    <h4>@ViewBag.Message</h4>
}

<h2>Blog List</h2>

    @foreach (var blog in Model)
    {
        <br />
        <span style="font-size:large; font-weight: bold;">
            
            @*<a href="~/blog/edit/@blog.ID">@Html.DisplayFor(modelItem => blog.Title)</a>*@

            @Html.ActionLink(@Html.DisplayFor(modelItem => blog.Title).ToString(), "Edit", new { id = blog.ID })
            
                @*@Html.DisplayFor(modelItem => blog.Title)*@
        </span>
        @*<p>@Html.Raw(blog.Content.Replace("\r\n", "<br />"))</p>*@
        <br />
